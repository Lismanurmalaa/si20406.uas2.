<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#EAEAEA"/>


    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@color/white"
        android:src="@drawable/ic_baseline_chevron_left_24"
        android:layout_margin="15dp"/>

    <LinearLayout
        android:layout_below="@id/img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FAFAFA">

            <TextView
                android:id="@+id/txt_nama"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Nama anda"
                android:textSize="21sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txt_pekerjaan"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Masukan pekerjaan"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:textSize="14sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/txt_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0980802428"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:drawableLeft="@drawable/ic_baseline_call_24_black"
                android:drawablePadding="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mobile"
                android:layout_marginLeft="35dp"
                android:textSize="16sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="#EAEAEA"/>

            <TextView
                android:id="@+id/txt_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masukan email"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:drawableLeft="@drawable/ic_baseline_alternate_email_24_black"
                android:drawablePadding="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="work"
                android:layout_marginLeft="35dp"
                android:textSize="16sp"/>


        </LinearLayout>

    </LinearLayout>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginRight="50dp"
        android:background="@drawable/gradient_blue">

        <ImageView
            android:id="@+id/phone"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="17dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="17dp"
            android:src="@drawable/ic_baseline_call_24"/>

        <View
            android:layout_marginTop="10dp"
            android:layout_width="30dp"
            android:layout_height="0.5dp"
            android:background="@color/white"/>


        <ImageView
            android:id="@+id/delete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="17dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="17dp"
            android:src="@drawable/ic_baseline_delete_24"/>

        <View
            android:layout_marginTop="10dp"
            android:layout_width="30dp"
            android:layout_height="0.5dp"
            android:background="@color/white"/>

        <ImageView
            android:id="@+id/edit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="17dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="17dp"
            android:src="@drawable/ic_baseline_edit_24"/>

        <View
            android:layout_marginTop="10dp"
            android:layout_width="30dp"
            android:layout_height="0.5dp"
            android:background="@color/white"/>

        <ImageView
            android:id="@+id/message"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="17dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="17dp"
            android:src="@drawable/ic_baseline_message_24"/>
    </LinearLayout>


</RelativeLayout>